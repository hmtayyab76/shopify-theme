<style>
  .card {
    width: 200px;
    height: 200px;
    padding: 20px;
  }

  .banner-block {
    position: relative;
    width: 100%;
    height: 100%;
    border: 1px solid #e6e6e6;
  }

  .banner-text-div {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    padding: 20px 20px 15px 20px !important;
    box-sizing: border-box; 
    opacity: 0; /* Hide initially */
    transition: background-color 0.5s, opacity 0.5s;
  }

  .banner-block:hover .banner-text-div {
    background-color: rgba(103, 117, 214, 0.8);
    opacity: 1;
  }

  .banner-text-top-1 {
    font-weight: 700;
    font-size: 22px;
    line-height: 1.1;
    color: #333;
    padding-bottom: 8px;
  }

  .banner-text-top-2,
  .banner-text-top-3 {
    font-family: 'Poppins-Regular', sans-serif;
    font-size: 14px;
    line-height: 1.7;
    color: #fff;
  }

  .banner-text-top-2 {
    color: #555;
  }

  .banner-text-top-3 {
    border-bottom: 2px solid #fff;
  }

  a {
    text-decoration: none;
  }

  a:hover {
    text-decoration: none;
  }

  .banner-text-div:hover .block-link-1 {
    animation: shop-trans 0.5s;
  }

  .img-style {
    width: 100%;
    height: 100%;
    object-fit: cover; 
  }

  @keyframes shop-trans {
    from {
      transform: translate(0px, 10px);
    }

    to {
      transform: translate(0px, 0px);
    }
  }
</style>

<div class="card">
  <div class="position-relative w-100 h-100 banner-block">
    <img src="{{ section.settings.prj-images | img_url:'master' }}" class="img-style" alt="IMG-BANNER">
    <a href="#" class="banner-text-div">
      <div>
        <span class="banner-text-top-1">
          {{ section.settings.text1 }}
        </span>
        <span class="banner-text-top-2">
          {{ section.settings.text2 }}
        </span>
      </div>
      <div class="shop-transition">
        <div class="banner-text-top-3 block-link-1">
          {{ section.settings.text3 }}
        </div>
      </div>
    </a>
  </div>
</div>

{% schema %}
{
  "name": "Card",
  "settings": [
    {
      "type": "image_picker",
      "id": "prj-images",
      "label": "Upload Image"
    },
    {
      "type": "text",
      "id": "text1",
      "label": "Text Here"
    },
    {
      "type": "text",
      "id": "text2",
      "label": "Text Here"
    },
    {
      "type": "text",
      "id": "text3",
      "label": "Text Here"
    }
  ],
  "presets": [
    {
      "name": "Card"
    }
  ]
}
{% endschema %}
