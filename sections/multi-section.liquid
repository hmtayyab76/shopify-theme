{% schema %}
{
  "name": "Multi Blocks Section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Multicolumn Section"
    },
    {
      "type": "range",
      "id": "font_size",
      "min": 12,
      "max": 40,
      "step": 1,
      "unit": "px",
      "label": "Font size",
      "default": 16
    },
    {
  "type": "color_background",
  "id": "background",
  "label": "Background",
  "default": "linear-gradient(#ffffff, #000000)"
},
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Column Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Column Title"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Column Text"
        },
        {
          "type": "text",
          "id": "link_label",
          "label": "Link Label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
     "name": "Multi Blocks Section"
    }
  ]
}
{% endschema %}

<style>
  .multicolumn-container .multicolumn-section {
    display: flex;
    flex-wrap: wrap; /* Allow columns to wrap to the next row */
  }
  h2.section-title{
    margin:10px;
     font-size: {{section.settings.font_size}}px;
    color:red;
  }
  .multicolumn-columns {
    display: flex;
    flex-wrap: wrap; /* Allow columns to wrap to the next row */
  }

  .column {
    border: 2px solid #000;
    width: 33%;
    padding:10px;
    margin: 10px; /* Adjust margin to create space between columns */
  }
</style>

<div class="multicolumn-section">
  <div class="multicolumn-container">
    {% if section.settings.title != blank %}
      <h2 class="section-title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="multicolumn-content">
      <div class="multicolumn-columns">
        {% for block in section.blocks %}
          <div class="column">
            {% if block.settings.image != blank %}
              <img src="{{ block.settings.image | img_url: '800x' }}" alt="{{ block.settings.title }}">
            {% endif %}
            {% if block.settings.title != blank %}
              <h3>{{ block.settings.title }}</h3>
            {% endif %}
            {% if block.settings.text != blank %}
              <p>{{ block.settings.text }}</p>
            {% endif %}
            {% if block.settings.link_label != blank and block.settings.link != blank %}
              <a href="{{ block.settings.link }}">{{ block.settings.link_label }}</a>
            {% endif %}
          </div>
        {% endfor %}
      </div>

      {% if section.settings.button_label != blank and section.settings.button_link != blank %}
        <div class="section-button">
          <a href="{{ section.settings.button_link }}" class="button">{{ section.settings.button_label }}</a>
        </div>
      {% endif %}
    </div>
  </div>
</div>

