{% schema %}
{
  "name": "Three Image Text",
  "settings": [
    {
      "type": "richtext",
      "id": "block_heading",
      "label": "Heading",
    },
    {
      "type": "text",
      "id": "button_heading",
      "label": "Button Heading",
      "default":"Be Fast or be Last - take action now!"
    },
     {
      "type": "text",
      "id": "btn_text",
      "label": "Button Label",
      "default": "Boost Your Brand Now!"
    },

    {
      "type": "url",
      "id": "btn_link",
      "label": "Button Url"
    }

  ],
  "blocks": [
    {
      "type": "block",
      "name": "Step",
      "settings": [
         {
          "type": "text",
          "id": "step-heading",
          "label": "Step Heading",
           "default": "Lorem ipsum dolor"

        },
        {
          "type": "image_picker",
          "id": "step-iamge-1",
          "label": "Step Iamge 1"
        },
        {
          "type": "text",
          "id": "step-discp",
          "label": "Discription",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla eu ante finibus, lobortis nisi id, dapibus erat. Donec a tellus euismod, consequat tortor at, suscipit arcu. In et porttitor dui donec dignissim."
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Three Image Text"
    }
  ]
}
{% endschema %}

<style>
   :root {
            --primary-color: #efefef;
            --gradient-color: linear-gradient(180deg, #fff 0%, #fff 100%);
        }
  .body-d8 {
    font-family: Arial, sans-serif;

    border-radius: 30px 0 0 30px;
    background: linear-gradient(
        0deg,
        rgba(0, 0, 0, 0.1) 0%,
        rgba(0, 0, 0, 0.1) 100%
      ),
      url(<path-to-image>) lightgray 50% / cover no-repeat, #000;
    background: linear-gradient(
        0deg,
        rgba(0, 0, 0, 0.1) 0%,
        rgba(0, 0, 0, 0.1) 100%
      ),
      #000;

    color: white;
    margin: 0;
    padding: 0;
    margin-left: 30px;
  }
  .step-top-heading {
    display: flex;
    align-items: center;
    gap: 16px;
    margin-bottom: 16px;
  }
  .step-top-heading p {
    color: #fff;
    font-family: Jost;
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
    text-transform: uppercase;
  }
  .step-counter-d8 {
    display: flex;
    padding: 10px 14px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border-radius: 5px;
    background: #bf8c4c;
    color: #FFF;
    font-family: Jost;
    font-size: 16px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  .container-d8 {
    padding: 50px;
    text-align: center;
    display: flex;
    padding: 90px 60px;
    flex-direction: column;
    width: 100%;
    align-items: center;
    gap: 75px;
  }
  .h1-d8 {
    color: #fff;
    text-align: center;
    font-family: Jost;
    font-size: 48px;
    font-style: normal;
    font-weight: 400;
    line-height: normal;
  }
  .steps-d8 {
    width: 100%;
    display: flex;
    align-items: flex-start;
    gap: 60px;
  }
  .step-d8 {
    width: 35%;
    max-width: 400px;
    box-sizing: border-box;
  }
  .step-d8 img {
    width: 100%;
  }

  .step-d8 .p-d8 {
    margin-top: 32px;
    color: #fff;
    font-family: Raleway;
    font-size: 16px;
    font-style: normal;
    text-align: left;
    font-weight: 400;
    line-height: 150%; /* 24px */
  }
  .cta-d8 {
    margin-top: 40px;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 15px;
  }
  .cta-d8 p {
    color: #fff;
    font-family: Jost;
    font-size: 20px;
    font-style: normal;
    font-weight: 600;
    line-height: normal;
  }
  .cta-d8 .button-d8 {
    display: flex;
    padding: 16px 60px;
    justify-content: center;
    align-items: center;
    gap: 10px;
    border-radius: 5px;
    background: #bf8c4c;
    color: #fff;
    font-family: Raleway;
    font-size: 16px;
    font-style: normal;
    cursor: pointer;
    font-weight: 600;
    line-height: normal;
    text-transform: uppercase;
  }
   .button-d8 {

            width: 100%;
            text-decoration: none;
            transition: all 0.25s ease-in-out;
            background-image: radial-gradient(227.71% 180.23% at 90.64% 130.38%, rgb(17, 20, 23) 0%, rgb(55, 59, 63) 100%), radial-gradient(207.84% 121.69% at -5.69% 111.39%, rgb(17, 20, 23) 0%, rgb(55, 59, 63) 100%), linear-gradient(206deg, rgba(123, 134, 151, 0.2) 0%, rgba(25, 27, 30, 0.2) 100%), linear-gradient(180deg, rgba(0, 0, 0, 0.2) 0%, rgba(0, 0, 0, 0.2) 100%);
        }



        .button-d8:hover {
            transform: translateY(2px);
            box-shadow: inset 0 0 0 1px black, 0 0 0 2px #3a3d40, 0 0 0 4px rgba(0, 0, 0, 0.25), 0 4px 12px -5px rgba(0, 0, 0, 0.53), 0 6px 6px -4px rgba(0, 0, 0, 0.35);
            transition: all 0.25s ease-in-out;
        }

        .button-d8:hover span {
          color: #efefef
        }
  @media screen and (max-width: 900px) {
    .steps-d8 {
      flex-direction: column;
    }
    .step-d8 {
      width: 100%;
      max-width: 100%;
    }
    .body-d8 {
      margin: 0;
      border-radius: 30px;
    }
    .container-d8 {
      gap: 32px;
      padding: 40px 20px;
    }
    .h1-d8 {
      color: #fff;
      text-align: center;
      font-family: Jost;
      font-size: 24px;
      font-style: normal;
      font-weight: 400;
      line-height: normal;
    }
    .step-d8 .p-d8 {
      margin-top: 16px;
      color: #fff;
      font-family: Raleway;
      font-size: 14px;
      font-style: normal;
      font-weight: 400;
      line-height: 150%; /* 21px */
    }
    .step-top-heading {
      display: flex;
      align-items: center;
      gap: 16px;
      margin-bottom: 16px;
    }
    .step-top-heading p {
      color: #fff;
      font-family: Jost;
      font-size: 16px;
      font-style: normal;
      font-weight: 600;
      line-height: normal;
      text-transform: uppercase;
    }
    .cta-d8 p {
      color: #fff;
      font-famcolor: #fff;
      font-family: Jost;
      font-size: 16px;
      font-style: normal;
      font-weight: 600;
      line-height: normal;
    }
    .cta-d8 .button-d8 {
      display: flex;
      padding: 16px 60px;
      justify-content: center;
      align-items: center;
      gap: 10px;
    }
    .cta-d8 {
      margin-top: 32px;
      display: flex;
      flex-direction: column;
      align-items: center;
      gap: 15px;
    }
    .step-counter-d8 {
      font-size: 14px;
    }
  }
</style>
<div class="body-d8">
  <div class="container-d8">
    <h1 class="h1-d8">{{ section.settings.block_heading }}</h1>
    <div class="steps-d8">
      {% for block in section.blocks limit: 3 %}
        <div class="step-d8">
          <div class="step-top-heading">
            <div class="step-counter-d8">1</div>
            <p>{{ block.settings['step-heading'] }}</p>
          </div>
          <img src="{{ block.settings.step-iamge-1 | image_url }}" alt="Step 1" width="" height="">
          <p class="p-d8">
            {{ block.settings['step-discp'] }}
          </p>
        </div>
      {% endfor %}
    </div>
    <div class="cta-d8">
      <p>{{ section.settings.button_heading }}</p>
      <a src="{{ section.settings.btn_link }}" class="button-d8">
        <span>{{ section.settings.btn_text }}</span>
      </a>
    </div>
  </div>
</div>
