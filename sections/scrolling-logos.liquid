<style>
    .scrolling-logo {
        overflow: hidden;
        white-space: nowrap;
        width: 100vw;
    }
    .scrolling-logo-container{
        width:1000px;
    }
    
    .logo-item {
        display: inline-block;
        margin-right: 20px; /* Adjust spacing between logos */
        animation: scrollLeft 1s linear infinite; /* Adjust animation speed as needed */
    }
    
    .logo-item:hover {
        animation-play-state: paused; /* Pause animation on hover */
    }
    
    /* Resume animation on mouse out */
    .logo-item:hover + .logo-item,
    .scrolling-logo:hover .logo-item {
        animation-play-state: running;
    }
    
    @keyframes scrollLeft {
        0% {
            transform: translateX(0%);
        }
        100% {
            transform: translateX(-100%);
        }
    }
    
</style>
