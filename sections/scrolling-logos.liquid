{% assign slides = section.blocks %}
<style>
  .slider {
  width: 100%;
  height: 500px;
  overflow: hidden;
  position: relative;
}

.slider .slide {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
  transition: opacity 0.5s ease;
}

.slider .slide:first-child {
  opacity: 1;
}
</style>
<div class="slider">
  <div class="slide" data-slide-index="{{ forloop.index0 }}">
    {% for slide in slides %}
      {% if forloop.index == forloop.index0 %}
        {% assign slide_image = slide.settings.image %}
        {% assign slide_title = slide.settings.title %}
        {% assign slide_text = slide.settings.text %}
      {% endif %}
    {% endfor %}
    {% if slide_image %}
      <img src="{{ slide_image | image_url: '1200x600' }}" width="" height="s" alt="Slide">
    {% endif %}
    {% if slide_title or slide_text %}
      <div class="slide-content">
        {% if slide_title %}
          <h2>{{ slide_title }}</h2>
        {% endif %}
        {% if slide_text %}
          {{ slide_text | markdownify }}
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

<script>
  $(document).ready(function () {
  setInterval(function () {
    $('.slider .slide:first-child').fadeOut(500).next().fadeIn(500).end().appendTo('.slider');
  }, 5000);
});
</script>

{% schema %}

{
  "name": "Slider",
  "settings": [],
  "blocks": [
    {
      "type": "image",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider",
      "category": "Custom",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
