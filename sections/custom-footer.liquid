<style>
    /* Styles for the first section */
.bg-dark-primary {
    background-color: #343a40; /* Adjust color as needed */
    transition: background-color 0.3s ease; /* Transition for theme change */
}

.container-fluid {
    width: 100%;
    padding-right: 15px;
    padding-left: 15px;
    margin-right: auto;
    margin-left: auto;
}

.row {
    display: flex;
    width:100%;
    padding:50px 20px;
    justify-content:space-between;
}
.footer-right-side{
    width:50%;
    display: flex;
    
}
.footer-left-side{
    width:50%;
    padding:50px;
}

@media (max-width: 706px) {
    .row {
        display: block;
        width:100%;
        padding:15px;
      
    }
    .footer-left-side {
        width: 100%;
        margin:0;
        padding: 15px;
    }
    .footer-left-side p {
        margin:0;
    }
    .footer-right-side {
        width: 100%;
        display: flex;
        justify-content: center;
    }
}
.col-12, .col-6, .col-sm-12, .col-sm-4, .col-lg-6, .col-lg-2 {
    position: relative;
    width: 100%;
    min-height: 1px;
    padding-right: 15px;
    padding-left: 15px;
}

.mb-4 {
    margin-bottom: 1.5rem !important;
}

.mb-3 {
    margin-bottom: 1rem !important;
}

.my-4 {
    margin-top: 1.5rem !important;
    margin-bottom: 1.5rem !important;
}

.mb-md-4 {
    margin-bottom: 2rem !important;
}

.mb-lg-0 {
    margin-bottom: 0 !important;
}

.text-light {
    color: #f8f9fa !important; /* Adjust color as needed */
}

.text-decoration-none {
    text-decoration: none !important;
}

.w-50 {
    width: 50% !important;
}



.d-sm-block {
    display: block !important;
}

/* Styles for the second section */
.py-0 {
    padding-top: 0 !important;
    padding-bottom: 0 !important;
}

.bg-dark-1 {
    background-color: #495057; /* Adjust color as needed */
}

.m-0 {
    margin: 0 !important;
}

.justify-content-between {
    justify-content: space-between !important;
}

.px-3 {
    padding-left: 0.75rem !important;
    padding-right: 0.75rem !important;
}

.py-2 {
    padding-top: 0.5rem !important;
    padding-bottom: 0.5rem !important;
}
.rights{
    text-align:center;
}

.text-white {
    color: #fff !important; /* Adjust color as needed */
}

/* Additional styles for the footer */
.footer {
    background-color: #343a40;
    color: #fff;
    padding: 20px 0;
    text-align: center;
}

.text-primary  {
    color: #17a2b8  ;
    text-decoration: none;
}

.text-primary:hover {
    color: #f8f9fa;
}

.footer p {
    margin-bottom: 10px;
}
.link-heading{
    color:#efefef;
    font-weight:700;
}

</style>

