<script src="{{ 'option_selection.js' | shopify_asset_url }}" defer="defer"></script>
<script>
     window.addEventListener('DOMContentLoaded', function() {
    var selectCallback = function(variant, selector) {


  if (variant) {
    var form = jQuery('#' + selector.domIdPrefix).closest('form');
    for (var i=0,length=variant.options.length; i<length; i++) {
      var radioButton = form.find('.swatch[data-option-index="' + i + '"] :radio[value="' + variant.options[i] +'"]');

      if (radioButton.length > 0) {
        radioButton.get(0).checked = true;
      }
    }
  }

      timber.productPage({
        money_format: "{{ shop.money_format }}",
        variant: variant,
        selector: selector
      });
    };

    jQuery(function($) {
      new Shopify.OptionSelectors('productSelect', {
        product: {{ product | json }},
        onVariantSelected: selectCallback,
        enableHistoryState: true
      });

      // Add label if only one product option and it isn't 'Title'. Could be 'Size'.
      {% if product.options.size == 1 and product.options.first != 'Title' %}
        $('.selector-wrapper:eq(0)').prepend('<label for="productSelect-option-0">{{ product.options.first | escape }}</label>');
      {% endif %}

      // Hide selectors if we only have 1 variant and its title contains 'Default'.
      {% if product.variants.size == 1 and product.variants.first.title contains 'Default' %}
        $('.selector-wrapper').hide();
      {% endif %}
    });
    jQuery(function() {
     jQuery('.swatch :radio').change(function() {
          var optionIndex = jQuery(this).closest('.swatch').attr('data-option-index');
          var optionValue = jQuery(this).val();
          jQuery(this)
            .closest('form')
            .find('.single-option-selector')
            .eq(optionIndex)
            .val(optionValue)
            .trigger('change');
        });
      });

        {% if product.metafields.custom.ring_current_size != blank and settings.resize_ring_charges != blank %}
          var currentNumber = {{ product.metafields.custom.ring_current_size }};
          // console.log("currentNumber - " + currentNumber);
          var currentNumberthreeminus = Math.floor({{ product.metafields.custom.ring_current_size }} - 3);
          console.log("currentNumberthreeminus - " + currentNumberthreeminus);
          var currentNumberthreeplus = Math.floor({{ product.metafields.custom.ring_current_size }} + 3);
          console.log("currentNumberthreeplus - " + currentNumberthreeplus);
          var startNumber = 3.25;
          var endNumber = 11;
          var increment = 0.25;
          for (var i = startNumber; i <= endNumber; i += increment) {
            var number = i;
            // if(number >= 4 && number <= 5){}else{
              if(number >= currentNumberthreeminus && number <= currentNumberthreeplus){
                // console.log(number);
                if(number == currentNumber){
                  $("#pro_resize_size_ring").append("<option value='" + number.toFixed(2) + "' selected='selected'>" + number.toFixed(2) + "</option>");
                }else{
                  $("#pro_resize_size_ring").append("<option value='" + number.toFixed(2) + "'>" + number.toFixed(2) + "</option>");
                }
              // }
            }
          }
          $("#pro_resize_size_ring").trigger("change");

          $("#pro_resize_size_ring").change(function(){
            if($(this).val() != currentNumber){
              $(this).parents(".pro_resize_label").addClass("resize_select");
            }else{
              $(this).parents(".pro_resize_label").removeClass("resize_select");
            }
          });
        {% endif %}
    });
</script>

