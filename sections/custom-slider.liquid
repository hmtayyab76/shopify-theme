<style>
/* Slider */
.slider {
    height: 400px;
    overflow: hidden;
    position: relative; 
}

/* Slider Cards */
.slide-card {
    width: 100%;
    max-width: 300px;
    display: inline-block;
    vertical-align: top;
    transition: transform 0.5s ease-in-out;
}

/* Slider Arrows */
.arrow {
    width: 40px;
    height: 40px;
    background-color: #fff;
    border: none;
    cursor: pointer;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
}

/* Disabled Button */
.bg-disabled {
    background-color: #e5e3e7;
    cursor: not-allowed;
}

/* Active Slide */
.slide-card.active {
    transform: scale(1.1);
    z-index: 3;
}

/* Slide Transitions */
.move-left {
    transform: translateX(-100%);
}

.move-right {
    transform: translateX(100%);
}

</style>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const btnNext = document.getElementById('next-arrow');
        const btnPrev = document.getElementById('previous-arrow');
        const slides = document.querySelectorAll('.slide-card');
        let currentIndex = 0;
    
        btnNext.addEventListener('click', nextSlide);
        btnPrev.addEventListener('click', previousSlide);
    
        function updateSlide() {
            slides.forEach((slide, index) => {
                slide.classList.remove('active', 'move-left', 'move-right');
                if (index === currentIndex) {
                    slide.classList.add('active');
                } else if (index < currentIndex) {
                    slide.classList.add('move-left');
                } else {
                    slide.classList.add('move-right');
                }
            });
        }
    
        function nextSlide() {
            currentIndex = (currentIndex + 1) % slides.length;
            updateSlide();
        }
    
        function previousSlide() {
            currentIndex = (currentIndex - 1 + slides.length) % slides.length;
            updateSlide();
        }
    
        // Initialize
        updateSlide();
    });
    
    
</script>
