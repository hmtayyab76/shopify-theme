  }
  #shopify-section-{{ section.id }} .slider-container {
      position: relative;
      overflow: hidden;
  }
  #shopify-section-{{ section.id }} .slider-39-d9 {
      display: flex;
      transition: transform 0.5s ease;
      width: 100%;
  }
  #shopify-section-{{ section.id }} .slide-39-d9 {
      min-width: 100%;
      display: flex;
      flex-direction: column;
      gap: 20px;
  }
  #shopify-section-{{ section.id }} .arrows-39-d9 {
      width: 100%;
      display: flex;
      justify-content: flex-start;
      align-items: center;
      gap: 10px;
      margin-top: 30px;
  }
  #shopify-section-{{ section.id }} .arrows-39-d9 span {
      font-size: var(--text-size-d9);
      font-weight: 700;
  }
  #shopify-section-{{ section.id }} .arrows-39-d9 button {
