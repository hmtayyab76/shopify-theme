      --bg-color-d9: {{ section.settings.bg-color }};
      --text-color-d9: {{ section.settings.text-color }};
      --second-color-d9: {{ section.settings.sec-color }};
  }
  #shopify-section-{{ section.id }} .main-af-bf-39-d9 {
      width: 100%;
      background: var(--bg-color-d9);
  }
  #shopify-section-{{ section.id }} .inner-af-bf-39-d9 {
      max-width: 1440px;
      padding-top: var(--top-pad-d9);
      padding-bottom: var(--bottom-pad-d9);
      padding-left: var(--left-pad-d9);
      padding-right: var(--right-pad-d9);
      margin: 0 auto;
  }
  #shopify-section-{{ section.id }} .row-af-bf-39-d9 {
      display: flex;
      align-items: center;
      justify-content: flex-end;
      gap: {{ section.settings.gap-d }}px;
      position: relative;
  }
  #shopify-section-{{ section.id }} .col-af-bf-39-d9 {
      width: calc(50% - 55px);
  }
  #shopify-section-{{ section.id }} .img-col-39-d9 {
      position: relative;
      display: flex;
      justify-content: center;
  }
  #shopify-section-{{ section.id }} .img-col-39-d9 img {
      width: 100%;
      object-fit: cover;
      box-shadow: 0 4px 9px #00000040;
      border-radius: 20px;
  }
  #shopify-section-{{ section.id }} .svg-39-d9 {
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 5px;
      width: 100%;
  }
  #shopify-section-{{ section.id }} .svg-39-d9 svg {
      width: 90px;
  }
  #shopify-section-{{ section.id }} .svg-39-d9 span {
      font-size: calc(var(--text-size-d9) + 3px);
      line-height: 130%;
      font-weight: 400;
  }
  #shopify-section-{{ section.id }} .af-39-d9-img svg {
      transform: rotate(135deg);
  }
  #shopify-section-{{ section.id }} .af-39-d9-img svg path {
      fill: var(--second-color-d9) !important;
  }
  #shopify-section-{{ section.id }} .bf-39-d9-img svg {
      transform: rotate(-45deg);
