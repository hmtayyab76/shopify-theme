<style>
  .c-f-p-section{
    padding: 50px 20px;
      max-width: 1138px;
      margin: 0px auto;
  }
  .pro-btn {
    min-width: 139px;
    height: 40px;
    border-radius: 25px;
    left: 30%;
    top: 80%;
  }

  .trans-pro-btn {
    display: none;
  }

  .trans-pro-btn-block:hover .trans-pro-btn {
    animation: quick-anmin 0.5s;
    width: fit-content;
    display: block;
  }

  @keyframes quick-anmin {
    from {
      transform: translate(0px, 40px);
    }

    to {
      transform: translate(0px, 0px);
    }
  }

  .pro-a {
    color: #999;
    font-size: 14px;
    line-height: 1.466667;
  }

  .hov-img {
    overflow: hidden;
    display: block;
  }
  .hov-img img {
    object-fit: cover;
    object-position: center center;
  }

  .icon-img-block {
    position: relative;
  }

  .transi-img-pro {
    transition: 0.9s;
  }

  .trans-pro-btn-block:hover .transi-img-pro {
    transform: scale(1.08, 1.08);
  }

  .heart-icon-1 {
    position: absolute;
    top: 0;
    right: 0;
    opacity: 0;
    transition: 0.3s ease;
  }

  .overlay {
    position: absolute;
    top: 0;
    right: 0;
    opacity: 0;
    transition: 0.3s ease;
  }

  .icon-img-block:hover .overlay {
    opacity: 1;
  }

  .heart-icon-1 {
    position: absolute;
    top: 0;
    right: 0;
    opacity: 1;
    transition: 0.3s ease;
  }

  .icon-img-block:hover .heart-icon-1 {
    opacity: 0;
  }

  .pro-btn-end {
    font-weight: 550;
    background-color: #e6e6e6;
    min-width: 179px;
    transition: 0.5s;
    font-size: 15px;
    text-transform: uppercase;
  }
  a {
    text-decoration: none;
  }
  .view-div {
    position: relative;
    text-align: center;
  }
  .view-btn {
    position: absolute;
    padding: 5px 0px 0px 0px;
  }
  .btn-outline-dark:hover {
    color: #fff;
    background-color: #343a40;
    border-color: #343a40;
  }
  .product-div {
    max-width: 325px;
    margin: 10px 20px;
  }
  .btn-light {
    color: #212529;
    background-color: #e2e6ea;
    border-color: #dae0e5;
  }
  .products {
    display: flex;
    flex-wrap: wrap;
  }
  .content-div{
    display: flex;
    justify-content: space-between;

}
.heading h1{
  color: #023811;
  font-family: 'Inter', sans-serif;
  font-style: normal;
  font-weight: 700;
  line-height: 120%;
}
</style>
<div class="c-f-p-section">
  <div class="heading">
    <h1 class="">Featured Products</h1>
  </div>
  <div class="products">
    
    {% for product in collections.all.products %}
      <div class="product-div">
        <div class="view-div trans-pro-btn-block hov-img">
          <img
              src="{{ product.featured_image | image_url }}"
            alt="{{ product.title }}"
            width="100%"
            height="400px"
          >
            <a href="{{ product.url }}" class="pro-btn btn btn-light view-btn  btn-outline-dark trans-pro-btn">
              Quick View</a
            >
            </div>
            <div class="content-div">
              <div class="">
                <div href="#" class="pro-a">{{ product.title }}</div>
                <div class="d-block">
                  {{ product.price | money }}
                </div>
              </div>
              {% comment %} <div class="">
                <div class="icon-img-block">
                  <img src="{{ 'img_red.ico'  | asset_url }}" alt="" class="heart-icon-1" width="20px" height="20px">
                  <img src="{{ 'heart.png' | asset_url }}" class="overlay" alt="" width="20px" height="20px">
                </div>
              </div> {% endcomment %}
            </div>
    </div>
  {% endfor %}
</div>

</div>
{% schema %}
{
  "name": "Custom Featured Product",
  "settings": [
    {
      "type": "text",
      "id": "main-Product-title",
      "label": "Main Title",
      "default": "Product"
    },
    {
      "type": "url",
      "id": "Product_link",
      "label": "Product page link"
    },
    {
      "type": "text",
      "id": "min-title",
      "label": "Posts Title"
    },
    {
      "type": "product",
      "id": "selected_main_featured_product",
      "label": "Select a Featured Product"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Select Product",
      "settings": [
        {
          "type": "product",
          "id": "selected_featured_product",
          "label": "Select a Featured Product"
        },
        {
          "type": "checkbox",
          "id": "published-date",
          "label": "Add Date",
          "default": true
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Featured Product"
    }
  ]
}
{% endschema %}
