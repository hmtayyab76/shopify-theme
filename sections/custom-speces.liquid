



{% schema %}
{
  "name": "Custom Speces",
  "settings": [
    {
      "type": "text",
      "id": "speces_label",
      "label": "Speces Title"
    },
    {
        "type": "text",
        "id": "speces_value",
        "label": "Speces Title"
    }
  ],
  "presets": [
    {
      "name": "Custom Speces",
      "category": "Speces",
      "settings": {
        "speces_label": "",
        "speces_value": ""
      }
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Speces",
      "settings": [
        {
          "type": "text",
          "id": "speces_label",
          "label": "Speces Title"
        },
        {
            "type": "text",
            "id": "speces_value",
            "label": "Speces Title"
        }
      ]
    }
  ]
