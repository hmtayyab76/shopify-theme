



{% schema %}
{
  "name": "Custom Speces",
  "settings": [
    {
      "type": "text",
      "id": "speces_label",
      "label": "Speces Title",
      "default": "Speces title"
    },
    {
        "type": "text",
        "id": "speces_value",
        "label": "Speces Title",
        "default": "Speces title"
    }
  ],
  "presets": [
    {
      "name": "Custom Speces",
      "category": "Speces",
      "settings": {
        "speces_label": "",
        "speces_value": ""
      }
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Speces",
      "settings": [
        {
          "type": "text",
          "id": "speces_label",
          "label": "Speces Title",
          "default": "Speces title"
        },
        {
            "type": "text",
            "id": "speces_value",
            "label": "Speces Title",
            "default": "Speces title"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
   .speces{
    border-bottom:2px solid #efefef;
    width:300px;
}
.custom-Specess{
    padding:40px;
}
</style>


<div class="custom-Specess">
    {% if section.blocks > 0 %}
        <h2>Product Specifications</h2>
    {% endif %}
    <ul>  
        {%- for block in section.blocks -%}
            <li class="speces">
                <label>{{ block.settings.speces_label}}</label>
                <p>{{ block.settings.speces_value }}</p>
            </li>
            
        {% endfor %}
    </ul>
</div>
