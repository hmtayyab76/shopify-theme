



{% schema %}
{
  "name": "Custom Speces",
  "settings": [
    {
      "type": "text",
      "id": "speces_label",
      "label": "Speces Title",
      "default": "Speces title"
    },
    {
        "type": "text",
        "id": "speces_value",
        "label": "Speces Title",
        "default": "Speces title"
    }
  ],
  "presets": [
    {
      "name": "Custom Speces",
      "category": "Speces",
      "settings": {
        "Speces_title": "My Speces Title",
        "Speces_content": "This is a sample Speces content."
      }
    }
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Speces",
      "settings": [
        {
          "type": "text",
          "id": "speces_label",
          "label": "Speces Title",
          "default": "Speces title"
        },
        {
            "type": "text",
            "id": "speces_value",
            "label": "Speces Title",
            "default": "Speces title"
        }
      ]
    }
  ]
}
{% endschema %}

<style>
   .speces{
    border:0px 0px 2px 0px solid #efefef;
}
</style>


<h2>Product Specifications</h2>
<div class="custom-Specess">
    <ul>  
        {%- for block in section.blocks -%}
            <li class="speces">{{ product.metafields.custom.speces_rows custom.speces_rows }}</li>
        {% endfor %}
    </ul>
</div>
