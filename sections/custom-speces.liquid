{% endschema %}

<style>
   .speces{
    border-bottom:2px solid #efefef;
    width:300px;
    display:flex;
    align-items: center;
}
.speces h2{
   font-size:16px;
   font-weight: 700;
   margin:8px;
}
.speces p{
    font-size:14px;
   margin:8px;

    font-weight: 600;
 }
.custom-Specess{
    padding:40px;
}
</style>


<div class="custom-Specess">
   
        <h2>Product Specifications</h2>
   
    <ul>  
        {%- for block in section.blocks -%}
            <li class="speces">
                <h2>
                    {{ block.settings.speces_label}}
                    :
                </h2>
                <p>
                    {{ block.settings.speces_value }}
                </p>
            </li>
            
        {% endfor %}
    </ul>
</div>
